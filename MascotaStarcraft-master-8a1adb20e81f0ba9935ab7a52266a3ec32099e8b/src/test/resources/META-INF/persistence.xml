<?xml version="1.0" encoding="UTF-8"?>
<persistence 
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">
    <persistence-unit name="persistenceUnitHSQL" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <!-- Clase que quieres linkar a la base de datos es.cic.curso.curso18.ejercicio018.dominio.Venta-->
        <class>es.cic.curso.curso18.mascotastarcraft.fortaleza.Base</class>
        <class>es.cic.curso.curso18.mascotastarcraft.Sitio.Mapa</class>
        <class>es.cic.curso.curso18.mascotastarcraft.obrero.Trabajador</class>
 
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
            <!-- <property name="hibernate.connection.url" value="jdbc:hsqldb:mem:aname"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.connection.username" value="sa"/>
            <property name="hibernate.connection.password" value=""/> -->
            <property name="hibernate.show_sql" value="true" />
            <property name='hibernate.format_sql' value='true' />
        </properties>
    </persistence-unit>
   
</persistence>